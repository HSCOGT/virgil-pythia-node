{
  "name": "virgil-pythia",
  "version": "0.1.0",
  "description": "Virgil Pythia Service Client",
  "main": "dist/virgil-pythia.cjs.js",
  "module": "dist/virgil-pythia.es.js",
  "browser": {
    "./dist/virgil-pythia.cjs.js": "./dist/virgil-pythia.browser.cjs.js",
    "./dist/virgil-pythia.es.js": "./dist/virgil-pythia.browser.es.js"
  },
  "scripts": {
    "build:cjs": "rollup -c config/rollup.config.cjs.js && rollup -c config/rollup.config.browser.cjs.js",
    "build:es": "rollup -c config/rollup.config.es.js && rollup -c config/rollup.config.browser.es.js",
    "build:iife": "rollup -c config/rollup.config.iife.js",
    "clean": "rimraf dist",
    "test": "mocha --require babel-register --require dotenv/config \"src/tests/**/*.test.js\"",
    "preversion": "npm run test",
    "version": "npm run clean && npm run build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VirgilSecurity/pythia-node.git"
  },
  "keywords": [
    "pythia"
  ],
  "author": "Virgil Security Inc. <support@virgilsecurity.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/VirgilSecurity/pythia-node/issues"
  },
  "homepage": "https://github.com/VirgilSecurity/pythia-node#readme",
  "dependencies": {
    "cross-fetch": "^2.2.1",
    "virgil-crypto": "file:virgil-crypto-3.0.0-alpha.12.tgz",
    "virgil-sdk": "^5.0.0-alpha.5"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "builtin-modules": "^3.0.0",
    "chai": "^4.1.2",
    "dotenv": "^5.0.1",
    "mocha": "^5.1.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sinon": "^4.5.0"
  }
}
