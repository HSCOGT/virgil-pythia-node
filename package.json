{
  "name": "virgil-pythia",
  "version": "0.1.0",
  "description": "Virgil Pythia Service Client",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src -d dist --ignore test.js",
    "clean": "rimraf dist",
    "test": "mocha --require babel-register --require dotenv/config \"src/tests/**/*.test.js\"",
    "postinstall": "node scripts/download-node-addon.js",
    "start:fake": "node fake-server.js",
    "preversion": "npm run test",
    "version": "npm run clean && npm run build"
  },
  "files": [
    "dist",
    "scripts/download-node-addon.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VirgilSecurity/pythia-node.git"
  },
  "keywords": [
    "pythia"
  ],
  "author": "Virgil Security Inc. <support@virgilsecurity.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/VirgilSecurity/pythia-node/issues"
  },
  "homepage": "https://github.com/VirgilSecurity/pythia-node#readme",
  "dependencies": {
    "node-fetch": "^2.1.2",
    "tar": "^4.4.1",
    "tempy": "^0.2.1",
    "virgil-crypto": "^3.0.0-alpha.7",
    "virgil-sdk": "^5.0.0-alpha.2",
    "yauzl": "^2.9.1"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "dotenv": "^5.0.1",
    "mocha": "^5.1.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0"
  }
}
